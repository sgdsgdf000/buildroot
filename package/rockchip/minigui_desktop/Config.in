config BR2_PACKAGE_MINIGUI_DESKTOP
	bool "Minigui demo desktop"
	depends on BR2_PACKAGE_MINIGUI
	select BR2_PACKAGE_RTC_DEMO
	select BR2_PACKAGE_TSLIB
	select BR2_PACKAGE_LIBPNG12
	select BR2_PACKAGE_JPEG
	select BR2_PACKAGE_FREETYPE
	help
	  Minigui demo desktop


if BR2_PACKAGE_MINIGUI_DESKTOP

choice
    prompt "Touch Screen Size"
    default BR2_PACKAGE_MINIGUI_DESKTOP_4_INCH
    help
      Select 4-inch touch screen
      or 7-inch touch screen

    config BR2_PACKAGE_MINIGUI_DESKTOP_4_INCH
    bool "4 inch"
    help
        Set compatible with 4-inch touch screen

    config BR2_PACKAGE_MINIGUI_DESKTOP_7_INCH
    bool "7 inch"
    help
        Set compatible with 7-inch touch screen
endchoice

endif


config BR2_PACKAGE_MINIGUI_RKKEYBOARD_EVENT
	string "RK KEY BOARD EVENT"
	default "event0"
	depends on BR2_PACKAGE_MINIGUI_DESKTOP
	help
		RK KEY BOARD EVENT
